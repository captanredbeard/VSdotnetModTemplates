{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "uninstall",
			"options": {
				"cwd": "${workspaceFolder}/VSModTemplates"
			},
			"command": "dotnet new uninstall VintageStory.Mod.Templates",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "install",
			"dependsOn": [
				"pack"
			],
			"options": {
				"cwd": "${workspaceFolder}/VSModTemplates"
			},
			"command": "dotnet new install ./bin/Release/VintageStory.Mod.Templates.1.0.10.nupkg",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "pack",
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"options": {
				"cwd": "${workspaceFolder}/VSModTemplates"
			},
			"command": "dotnet pack -c Release"
		}
	]
}
